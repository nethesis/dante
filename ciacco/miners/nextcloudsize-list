#
# List nextcloud users by disk usage
#
#
use strict;
use warnings;
use JSON;
use POSIX qw(strftime);
use File::Basename;

my $date = strftime "%Y%m%d", localtime;
my @data;

if (! -d '/var/lib/nethserver/nextcloud') {
    exit 1;
}

my $users = decode_json(`su - apache -s /bin/bash -c "source /opt/rh/rh-php72/enable; cd /usr/share/nextcloud/; php occ --output=json user:list" 2>/dev/null`);

if (!$users) {
    exit 1;
}
    
my $i = 0;
open(my $fh, "du -b --max-depth=1 -c /var/lib/nethserver/nextcloud/ 2>/dev/null| sort -n -r |");
while (readline($fh)) {
    $i++;
    my ($bytes, $dir) = split(/\s+/, $_);
    my $name = basename($dir);
    if ($users->{$name}) {
        push(@data, {count => int($bytes), name => $users->{$name}});
    }
}
close($fh);

if (scalar @data == 0) {
    exit 1;
}

print encode_json({
        minerId => "nextcloudsize-list",
        type => "list",
        data => \@data,
        unit => "bytes",
        anonymizable => JSON::true,
        aggregationType => "snapshot"
    });
